structure inner-product-space
  head type

  link vector-space, like vector-space, have type
  link inner-product, like binary-function, have type

  # Linearity in the first argument
  assume linearity-first-argument
    head type, have type
    have vector-space
    have inner-product

  # Symmetry
  assume symmetry
    head type, have type
    have vector-space
    have inner-product

  # Positive-definiteness
  assume positive-definiteness
    head type, have type
    have vector-space
    have inner-product
